{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist-tsc",
    "rootDir": "./",
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es2015",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["./*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}