{
  "name": "adwave-render-service",
  "scripts": {
    "up": "docker compose --env-file ./environment/.env.default up --build -d",
    "down": "docker compose --env-file ./environment/.env.default down",
    "shared:swc": "cd ./packages/shared && swc build . -d ../dist/shared --extensions .ts",
    "renderer:tsc": "tsc --build ./packages/renderer/tsconfig.json && rimraf ./packages/shared/dist-tsc ./packages/renderer/dist-tsc",
    "renderer:swc": "cd ./packages/renderer && swc build . -d ../dist/renderer --extensions .ts",
    "renderer:build": "npm run shared:swc && npm run renderer:swc",
    "renderer:node": "node ./packages/dist/renderer/src/main.js",
    "renderer:concurrently": "concurrently --kill-others-on-fail --prefix \"{name}\" --names \"EXPRESS,TSCHECK\" --prefix-colors \"white,magenta\" \"npm run renderer:build && npm run renderer:node\" \"npm run renderer:tsc\"",
    "renderer:dev": "npm run clean && nodemon --legacy-watch --exec \"npm run renderer:concurrently\"",
    "renderer:logs": "docker logs -f --since 10m renderer",
    "build": "npm run renderer:build",
    "lint": "eslint ./packages/**/*.ts",
    "lint:fix": "eslint ./packages/**/*.ts --fix",
    "clean": "npm run clean:dist:swc && npm run clean:dist:tsc",
    "clean:dist:swc": "rimraf ./packages/dist",
    "clean:dist:tsc": "rimraf ./packages/renderer/dist-tsc ./packages/shared/dist-tsc"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.154.0",
    "@aws-sdk/lib-storage": "3.157.0",
    "amqplib": "^0.10.4",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "ioredis": "^5.4.1",
    "prom-client": "^15.1.2",
    "redlock": "^5.0.0-beta.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.25",
    "@types/amqplib": "^0.10.5",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-switch-case": "^1.1.2",
    "nodemon": "^3.1.3",
    "rimraf": "^5.0.7",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5"
  }
}
